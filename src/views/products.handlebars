<div class="container my-5">
    <div class="row">
        {{#each showProducts.docs}}
        <div class="col my-3">
            <div class="card" style="width: 18rem;">
                <img src={{this.thumbnails}} class="card-img-top" alt={{this.title}}>
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="my-4">Precio x Und: <b>{{this.price}}</b></p>
                    <p class="my-3">Categoria: {{this.category}}</p>
                    <p><button type="button" class="btn btn-info bbtt" id={{this._id}}>Agregar al Carrito</button></p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row my-5">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item {{#if showProducts.hasPrevPage}}{{else}}disabled{{/if}}">
                <a class="page-link" href="http://{{showProducts.prevLink}}">Previous</a>
            </li>
            
            <li class="page-item {{#if showProducts.hasNextPage}}{{else}}disabled{{/if}}">
                <a class="page-link" href="http://{{showProducts.nextLink}}">Next</a>
            </li>
        </ul>
    </nav>
</div>
</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="../public/js/productView.js"></script>